 <div class="container">    
            
    <div   class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading" style="background-color:darkblue;">
                <div class="panel-title" style="color: white;">Update Book Details</div>
                
            </div>  

            <div class="panel-body" >
              
                <form class="form3" method="post" action="/adminhome/adbooks/bupdate" enctype="multipart/form-data" onsubmit="return vald()">
                  <div class="row mb-3">
                    <div class="col-sm-10">
                      <label for="title" class="col-sm-4 col-form-label">Book_id</label>
                      <input type="id"  class="form-control"  name="bid" value="<%=bid%>"required readonly >
                      
                    </div>
                  </div>
                    <div class="row mb-3">
                        <div class="col-sm-10">
                          <label for="title" class="col-sm-4 col-form-label">Book Title</label>
                          <input type="title"  class="form-control" id="btitle" name="btitle"value="<%=btitle%>" oninput="return tit_val()" required >
                          <label for="error" id="errorb"></label>
                        </div>
                      </div>
                      <div class="row mb-3">
                        <div class="col-sm-10">
                          <label for="author" class="col-sm-2 col-form-label">Author</label>
                          <input type="author"  class="form-control" id="bauthor" name="bauthor" value="<%=bauthor%>" oninput="return aut_val()"required>
                          <label for="error" id="errora"></label>
                        </div>
                      </div>
                      <div class="row mb-3">
                        <div class="col-sm-10">
                          <label for="genre" class="col-sm-2 col-form-label">Genre</label>
                          <input type="text"  class="form-control" id="bgenre" name="bgenre" value="<%=bgenre%>"oninput="return gen_val()"required >
                          <label for="error" id="errorg"></label>
                        </div>
                      </div>
                      <div class="row mb-3">
                        <div class="col-sm-8">
                          <label for="exampleInputFile">Image File input</label>
                          <input type="file" id="exampleInputFile" id="imgb" name="image"required>
                          </div>
                      </div>    
                      <br>
                      <div class="row mb-3">
                        <div class="col-sm-10">
                          <label for="textarea"> Book Description</label>
                          <textarea class="form-control" rows="4" id="bdesc" name="bdesc" value="<%=bdesc%>"oninput="return desc_val()"><%=bdesc%></textarea>
                          <label for="error" id="errorbd"></label>
                          </div>
                      </div>  
                      <br>
                      <div style="text-align:justify;">
                      <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
             </div>
       </div>
